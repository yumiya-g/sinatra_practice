<main>
  <article>
    <%= render(:erb, :header) %>
    <div id="form">
      <form method="post" action="/memos/new">
      <div class="col">
        <label>タイトル：<input type="text" name="title" placeholder="メモのタイトル"></label>
      </div>
      <div class="col">
        <label>内容：<textarea name="content" placeholder="メモの内容"></textarea></label>
      </div>
